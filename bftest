# --- Confirmation dialog before creating actions ---
$fixletFullName = if ($titleRaw) { $titleRaw } else { "(unknown fixlet title)" }
$confirmMsg = "Fixlet: $fixletFullName`r`n`r`nAre you sure you want to create these 4 actions on this fixlet?`r`n`r`nClick Yes to Proceed or No to cancel."
$dlg = [System.Windows.Forms.MessageBox]::Show(
    $form,
    $confirmMsg,
    "Confirm: Create 4 Actions",
    [System.Windows.Forms.MessageBoxButtons]::YesNo,
    [System.Windows.Forms.MessageBoxIcon]::Question,
    [System.Windows.Forms.MessageBoxDefaultButton]::Button2
)
if ($dlg -ne [System.Windows.Forms.DialogResult]::Yes) {
    LogLine "ðŸš« User canceled at confirmation dialog."
    return
}
