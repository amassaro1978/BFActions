# Force: cascade start/deadline with selected slot (15-min steps from 7:00 AM Tue)
# 11:00 PM => 7:00 AM; 11:15 PM => 7:15 AM; ... ; 12:45 AM => 8:45 AM
$slotIndex  = $cbTime.SelectedIndex
if ($slotIndex -lt 0) { $slotIndex = 0 }  # safety
$slotOffset = [TimeSpan]::FromMinutes(15 * $slotIndex)

$ForceStartBase = (Get-NextWeekday -base $AnchorWed -weekday ([DayOfWeek]::Tuesday)).Date.AddHours(7) # Tue 7:00 AM
$ForceStart     = Round-ToMinute($ForceStartBase.Add($slotOffset))  # Tue 7:00 + offset
$ForceDeadline  = Round-ToMinute($ForceStart.AddDays(1))            # Wed (same offset)
